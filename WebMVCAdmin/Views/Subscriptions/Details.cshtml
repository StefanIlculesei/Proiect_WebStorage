@model WebMVC_Plans.Models.SubscriptionViewModel

@{
    ViewData["Title"] = "Subscription Details";
}

<h1 class="h3 mb-3"><i class="bi bi-card-text me-2"></i>Subscription Details</h1>

<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">User</dt>
            <dd class="col-sm-9">@(string.IsNullOrWhiteSpace(Model.UserName) ? Model.UserId.ToString() : Model.UserName)</dd>

            <dt class="col-sm-3">Plan</dt>
            <dd class="col-sm-9">@(string.IsNullOrWhiteSpace(Model.PlanName) ? Model.PlanId.ToString() : Model.PlanName)</dd>

            <dt class="col-sm-3">Start Date</dt>
            <dd class="col-sm-9">@Model.StartDate?.ToString("yyyy-MM-dd HH:mm")</dd>

            <dt class="col-sm-3">End Date</dt>
            <dd class="col-sm-9">@(Model.EndDate.HasValue ? Model.EndDate.Value.ToString("yyyy-MM-dd HH:mm") : "N/A")</dd>

            <dt class="col-sm-3">Active</dt>
            <dd class="col-sm-9">
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-secondary">Inactive</span>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">Back to list</a>
</div>
