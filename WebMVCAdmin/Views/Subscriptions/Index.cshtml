@model IEnumerable<WebMVC_Plans.Models.SubscriptionViewModel>

@{
    ViewData["Title"] = "Subscriptions";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h3 mb-0"><i class="bi bi-journal-check me-2"></i>Subscriptions</h1>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle me-1"></i>
        Create New Subscription
    </a>
</div>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>User</th>
                <th>Plan</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@(string.IsNullOrWhiteSpace(s.UserName) ? s.UserId.ToString() : s.UserName)</td>
                    <td>@(string.IsNullOrWhiteSpace(s.PlanName) ? s.PlanId.ToString() : s.PlanName)</td>
                    <td>@s.StartDate?.ToString("yyyy-MM-dd")</td>
                    <td>@(s.EndDate.HasValue? s.EndDate.Value.ToString("yyyy-MM-dd") : "N/A")</td>
                    <td>
                        @if (s.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-sm btn-primary">
                            <i class="bi bi-eye"></i> Details
                        </a>
                        <form asp-action="Delete" asp-route-id="@s.Id" method="post" class="d-inline"
                            onsubmit="return confirm('Are you sure you want to permanently delete this subscription?');">
                            <button type="submit" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info" role="alert">
        No active subscriptions found.
    </div>
}