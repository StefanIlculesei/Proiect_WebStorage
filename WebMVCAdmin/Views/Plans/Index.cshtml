@model IEnumerable<WebMVC_Plans.Models.PlanViewModel>

@{
    ViewData["Title"] = "Plans";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h3 mb-0"><i class="bi bi-card-list me-2"></i>Plans</h1>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle me-1"></i>
        Create New Plan
    </a>
    
</div>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Storage Limit</th>
                <th>Max File Size</th>
                <th>Billing Period</th>
                <th>Subscribers</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var plan in Model)
            {
                <tr>
                    <td>@plan.Name</td>
                    <td>@plan.Price.ToString("N2") @plan.Currency</td>
                    <td>@plan.LimitSizeGB.ToString("N2") GB</td>
                    <td>@plan.MaxFileSizeMB.ToString("N2") MB</td>
                    <td>@(plan.BillingPeriod ?? "N/A")</td>
                    <td>@plan.SubscriptionCount</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@plan.Id" class="btn btn-sm btn-primary">
                            <i class="bi bi-eye"></i> Details
                        </a>
                        <a asp-action="Edit" asp-route-id="@plan.Id" class="btn btn-sm btn-warning">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info" role="alert">
        No plans available.
    </div>
}
